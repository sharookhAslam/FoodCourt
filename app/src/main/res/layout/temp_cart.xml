<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:gravity="center"  >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Just Away to get your desire food"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        />
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#fff"
        android:id="@+id/news_feed"
        app:cardElevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/i_title"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/i_price"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="#8BC34A"
                android:layout_marginTop="8dp"
                android:id="@+id/i_img"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALl the Description of item wil pasted here"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:id="@+id/i_des"
                android:textColor="#BFBDBD"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:gravity="end"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:backgroundTint="#FFC107"
            android:id="@+id/btnminus"
            />

          <TextView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:text="1"
              android:gravity="center"
              android:id="@+id/qty"
              />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:id="@+id/btnadd"
            android:backgroundTint="#FFC107"
            />

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t_price"
            android:text="Total"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            />
    <com.google.android.material.button.MaterialButton
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Add to cart"
        android:textColor="@color/ic_launcher_background"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/i_cart"
        />


</LinearLayout>  </LinearLayout>

