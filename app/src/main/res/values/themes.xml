<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.FoodCourt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme.BackgroundImageStyle" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/signback2</item>
    </style>

    <style name="Base.Theme.AppCompat" parent="Theme.AppCompat.Light">
        <item name="android:paddingTop">1dp</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColor">#fff</item>
        <item name="backgroundColor">@color/purple_700</item>
    </style>


    <style name="Theme.Tooglebutton.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tooglebutton.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FoodCourt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FoodCourt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.FoodCourt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>